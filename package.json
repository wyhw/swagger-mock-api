{
  "name": "swagger-mock-api",
  "version": "0.0.0-semantically-released",
  "description": "Creates a connect middleware mock API from a Swagger 2.0 YAML file",
  "author": "dzdrazil",
  "contributors": [
    "dzdrazil",
    "marcusnaweb",
    "kohashi85",
    "zzswang",
    "cdcabrera"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cdcabrera/swagger-mock-api"
  },
  "bugs": {
    "url": "https://github.com/cdcabrera/swagger-mock-api/issues"
  },
  "engines": {
    "node": ">=8.9.1"
  },
  "main": "src/index.js",
  "scripts": {
    "commit": "git cz",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "dev": "run-p -l start lint:watch test:src",
    "docker": "sh ./scripts/docker.sh",
    "lint": "eslint ./src/",
    "lint:watch": "watch 'npm run lint --silent' src",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once",
    "start": "node app/index.js",
    "test": "npm run lint --silent; nyc --reporter=text mocha --recursive ./src",
    "test:src": "mocha --recursive --watch ./src"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "verifyConditions": ["@semantic-release/github"],
    "prepare": ["@semantic-release/github"],
    "publish": ["@semantic-release/github"]
  },
  "nyc": {
    "exclude": "**/*.spec.js"
  },
  "dependencies": {
    "chance": "^1.0.13",
    "express": "^4.16.2",
    "randexp": "^0.5.2",
    "routes": "^2.1.0",
    "swagger-parser": "^4.0.2",
    "swagger-ui-express": "^2.0.15",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.18.1",
    "eslint-config-node": "^2.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "mocha": "^5.0.1",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "prettier": "^1.10.2",
    "semantic-release": "^12.4.1",
    "semantic-release-cli": "^3.6.3",
    "travis-deploy-once": "^4.3.4",
    "watch": "^1.0.2"
  }
}
